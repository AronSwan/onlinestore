# TiDB Cloud 配置（面向国际买家的分布式数据库）
# 请在 TiDB Cloud 控制台获取连接信息：https://tidbcloud.com

# TiDB 数据库配置
DATABASE_TYPE=mysql
DATABASE_HOST=gateway01.ap-southeast-1.prod.aws.tidbcloud.com
DATABASE_PORT=4000
DATABASE_USERNAME=your_tidb_username
DATABASE_PASSWORD=your_tidb_password
DATABASE_NAME=caddy_shopping
DATABASE_SSL=true

# TiDB 连接池优化（国际网络）
DATABASE_CONNECTION_LIMIT=20
DATABASE_ACQUIRE_TIMEOUT=60000
DATABASE_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=300000

# Redis 配置（可使用 TiDB Cloud 的 Redis 服务或其他云服务）
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-international
JWT_EXPIRES_IN=7d

# 应用配置
NODE_ENV=production
PORT=3000
API_PREFIX=api

# 国际化配置
DEFAULT_TIMEZONE=UTC
SUPPORTED_LOCALES=en,zh,ja,ko,es,fr,de
DEFAULT_LOCALE=en

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 监控配置
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_ENABLED=true

# 缓存配置（针对国际用户优化）
CACHE_TTL=600
CACHE_MAX_ITEMS=10000

# CORS 配置（国际域名）
CORS_ORIGIN=https://your-international-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# 文件上传配置（使用云存储）
UPLOAD_PROVIDER=aws-s3
AWS_S3_BUCKET=your-international-bucket
AWS_S3_REGION=ap-southeast-1

# 支付配置（国际支付）
PAYMENT_PROVIDERS=stripe,paypal,alipay_global
STRIPE_PUBLIC_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret

# 搜索配置（全球分布）
SEARCH_PROVIDER=meilisearch_cloud
MEILISEARCH_HOST=https://your-meilisearch-instance.meilisearch.io
MEILISEARCH_API_KEY=your_meilisearch_api_key

# 邮件服务（国际邮件）
MAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
MAIL_FROM=noreply@your-domain.com

# 短信服务（国际短信）
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token