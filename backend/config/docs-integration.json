{
  "integration": {
    "name": "Backend Documentation System Integration with Paperless-NGX",
    "version": "1.0.0",
    "description": "将后端文档系统纳入 Paperless-NGX 监管的完整集成方案"
  },
  "directories": {
    "projectRoot": "..",
    "paperlessDir": "../paperless-ngx",
    "docsDir": "../docs",
    "consumeDir": "../paperless-ngx/consume",
    "exportDir": "../paperless-ngx/export",
    "logsDir": "../logs"
  },
  "monitoring": {
    "watchedExtensions": [".md", ".pdf", ".doc", ".docx", ".txt", ".rtf", ".odt", ".html", ".json"],
    "excludePatterns": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "coverage",
      "paperless-ngx",
      ".env",
      "*.log"
    ],
    "syncInterval": 300000,
    "healthCheckInterval": 120000,
    "retryAttempts": 3,
    "retryDelay": 5000
  },
  "categorization": {
    "rules": {
      "documentation": ["docs", "documentation"],
      "api-docs": ["api", "swagger", "openapi"],
      "guides": ["guides", "tutorial", "howto"],
      "templates": ["templates", "template"],
      "specifications": ["specs", "specification", "requirements"],
      "readme": ["README", "readme"],
      "configuration": ["config", "configuration", "settings"],
      "scripts": ["scripts", "automation"],
      "tests": ["test", "tests", "__tests__"],
      "deployment": ["deploy", "deployment", "docker"]
    },
    "defaultCategory": "general"
  },
  "tagging": {
    "autoTags": {
      "format": true,
      "category": true,
      "path": true,
      "date": true
    },
    "customTags": {
      "backend": "backend-system",
      "frontend": "frontend-system",
      "api": "api-documentation",
      "database": "database-related",
      "security": "security-docs",
      "deployment": "deployment-docs"
    }
  },
  "paperless": {
    "url": "http://localhost:8000",
    "consumeDir": "consume",
    "exportDir": "export",
    "mediaDir": "media",
    "dataDir": "data",
    "adminUser": "admin",
    "timezone": "Asia/Shanghai",
    "ocrLanguage": "eng",
    "documentTypes": [
      {
        "name": "Technical Documentation",
        "match": "documentation"
      },
      {
        "name": "API Documentation", 
        "match": "api-docs"
      },
      {
        "name": "User Guides",
        "match": "guides"
      },
      {
        "name": "Code Templates",
        "match": "templates"
      },
      {
        "name": "Specifications",
        "match": "specifications"
      }
    ]
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "console": true,
      "file": true,
      "webhook": false
    },
    "levels": ["INFO", "WARN", "ERROR"],
    "webhookUrl": null
  },
  "backup": {
    "enabled": true,
    "interval": 86400000,
    "retainDays": 30,
    "targetDir": "../backups/docs"
  },
  "performance": {
    "maxConcurrentImports": 5,
    "fileProcessingTimeout": 30000,
    "maxFileSize": 52428800,
    "enableCompression": true
  },
  "security": {
    "validateFileTypes": true,
    "scanForMalware": false,
    "allowedMimeTypes": [
      "text/markdown",
      "text/plain",
      "application/pdf",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "text/html",
      "application/json"
    ]
  }
}