# 用途：Paperless-NGX环境变量配置（生产环境优化版）
# 依赖文件：docker-compose.yml
# 作者：AI助手
# 时间：2025-09-30 16:05:00

# Redis配置
PAPERLESS_REDIS=redis://broker:6379
REDIS_PASSWORD=secure-redis-password-123

# 数据库配置
PAPERLESS_DBHOST=database
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=secure-db-password-456

# 应用配置
PAPERLESS_TIKA_ENABLED=1
PAPERLESS_PORT=8000
PAPERLESS_DATA_DIR=/usr/src/paperless/data
PAPERLESS_MEDIA_ROOT=/usr/src/paperless/media
PAPERLESS_STATICDIR=/usr/src/paperless/static
PAPERLESS_SECRET_KEY=super-secure-paperless-key-for-production
PAPERLESS_URL=https://paperless.caddy-shopping.com
PAPERLESS_ALLOWED_HOSTS=paperless.caddy-shopping.com,localhost,127.0.0.1
PAPERLESS_CORS_ALLOWED_HOSTS=https://paperless.caddy-shopping.com
PAPERLESS_TIME_ZONE=Asia/Shanghai
PAPERLESS_OCR_LANGUAGE=eng

# 性能优化配置
PAPERLESS_CONSUMPTION_DIR=/usr/src/paperless/consume
PAPERLESS_EXPORT_DIR=/usr/src/paperless/export
PAPERLESS_BACKUP_DIR=/usr/src/paperless/backups
PAPERLESS_CONSUMER_POLLING=5
PAPERLESS_CONSUMER_DELETE_DUPLICATES=true
PAPERLESS_OCR_PAGES=10
PAPERLESS_OCR_IMAGE_DPI=300

# 安全配置
PAPERLESS_CSRF_TRUSTED_ORIGINS=https://paperless.caddy-shopping.com
PAPERLESS_FORCE_SCRIPT_NAME=
PAPERLESS_LOGIN_REDIRECT_URL=/documents
PAPERLESS_LOGOUT_REDIRECT_URL=/accounts/login

# 邮件配置（可选）
PAPERLESS_EMAIL_HOST=smtp.gmail.com
PAPERLESS_EMAIL_PORT=587
PAPERLESS_EMAIL_HOST_USER=your-email@gmail.com
PAPERLESS_EMAIL_HOST_PASSWORD=your-app-password
PAPERLESS_EMAIL_USE_TLS=true
PAPERLESS_EMAIL_USE_SSL=false

# 高级配置
PAPERLESS_TASK_WORKERS=2
PAPERLESS_WORKER_TIMEOUT=300
PAPERLESS_MAX_DOCUMENT_SIZE=52428800
PAPERLESS_MAX_IMAGE_SIZE=20971520
PAPERLESS_PREVIEW_SIZE=1500
PAPERLESS_THUMBNAIL_SIZE=300
