{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "rootDir": "../../src",
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "../interfaces/**/*.ts",
    "../common/helpers/**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "../../node_modules",
    "../../dist"
  ]
}