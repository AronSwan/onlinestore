# OpenObserve 单一真相源配置
# 统一数据平台配置

# OpenObserve 服务器配置
OPENOBSERVE_URL=http://localhost:5080
OPENOBSERVE_ORGANIZATION=caddy-shopping

# 认证配置（选择一种方式）
OPENOBSERVE_TOKEN=your-openobserve-token-here
# OPENOBSERVE_USERNAME=admin
# OPENOBSERVE_PASSWORD=your-password

# 单一真相源数据流配置
OPENOBSERVE_STREAM_APPLICATION_LOGS=application-logs
OPENOBSERVE_STREAM_METRICS=system-metrics
OPENOBSERVE_STREAM_TRACES=request-traces
OPENOBSERVE_STREAM_BUSINESS_EVENTS=business-events
OPENOBSERVE_STREAM_SECURITY_EVENTS=security-events
OPENOBSERVE_STREAM_PERFORMANCE_METRICS=performance-metrics

# 数据保留策略（天）
OPENOBSERVE_RETENTION_LOGS=30
OPENOBSERVE_RETENTION_METRICS=90
OPENOBSERVE_RETENTION_TRACES=7
OPENOBSERVE_RETENTION_BUSINESS_EVENTS=365
OPENOBSERVE_RETENTION_SECURITY_EVENTS=180

# 批量处理配置
OPENOBSERVE_BATCH_SIZE=100
OPENOBSERVE_FLUSH_INTERVAL=5000
OPENOBSERVE_COMPRESSION=true

# 查询配置
OPENOBSERVE_QUERY_TIMEOUT=30000
OPENOBSERVE_MAX_RESULTS=10000

# 健康检查配置
OPENOBSERVE_HEALTH_CHECK_INTERVAL=60000
OPENOBSERVE_RECONNECT_ATTEMPTS=3
OPENOBSERVE_RECONNECT_DELAY=5000

# 监控配置
OPENOBSERVE_MONITORING_ENABLED=true
OPENOBSERVE_ALERTING_ENABLED=true
OPENOBSERVE_DASHBOARD_REFRESH_INTERVAL=30000

# 数据质量配置
OPENOBSERVE_DATA_VALIDATION_ENABLED=true
OPENOBSERVE_DUPLICATE_CHECK_ENABLED=true
OPENOBSERVE_SCHEMA_VALIDATION_ENABLED=true

# 安全配置
OPENOBSERVE_SSL_VERIFY=true
OPENOBSERVE_REQUEST_TIMEOUT=10000
OPENOBSERVE_RATE_LIMIT=1000