{
  "title": "死信队列监控",
  "panels": [
    {
      "title": "死信消息趋势",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(kafka_dlq_messages_total[5m])) by (topic,reason)",
          "legendFormat": "{{topic}} - {{reason}}"
        }
      ]
    },
    {
      "title": "死信消息原因分布",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum(kafka_dlq_messages_total) by (reason)",
          "legendFormat": "{{reason}}"
        }
      ]
    },
    {
      "title": "消息处理延迟",
      "type": "heatmap",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(kafka_message_age_seconds_bucket[5m])) by (le,topic))",
          "legendFormat": "{{topic}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "topic",
        "query": "label_values(kafka_dlq_messages_total, topic)"
      }
    ]
  }
}