{
  "dashboard": {
    "id": null,
    "title": "Caddy Style Shopping - 应用监控",
    "tags": ["caddy-shopping", "backend"],
    "timezone": "Asia/Shanghai",
    "panels": [
      {
        "id": 1,
        "title": "HTTP 请求总数",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "请求/秒"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "HTTP 请求响应时间",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95分位"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50分位"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "活跃连接数",
        "type": "graph",
        "targets": [
          {
            "expr": "active_connections",
            "legendFormat": "活跃连接"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "内存使用情况",
        "type": "graph",
        "targets": [
          {
            "expr": "memory_usage_bytes / 1024 / 1024",
            "legendFormat": "内存使用 (MB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "CPU 使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "cpu_usage_percent",
            "legendFormat": "CPU使用率 (%)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "事件循环延迟",
        "type": "graph",
        "targets": [
          {
            "expr": "event_loop_lag_ms",
            "legendFormat": "事件循环延迟 (ms)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "缓存命中率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "缓存命中率 (%)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "业务指标",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_registrations_total[5m])",
            "legendFormat": "用户注册/秒"
          },
          {
            "expr": "rate(user_logins_total[5m])",
            "legendFormat": "用户登录/秒"
          },
          {
            "expr": "rate(orders_created_total[5m])",
            "legendFormat": "订单创建/秒"
          },
          {
            "expr": "rate(products_viewed_total[5m])",
            "legendFormat": "产品浏览/秒"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
