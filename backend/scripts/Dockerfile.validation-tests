# 使用Node.js镜像
FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 复制package.json和package-lock.json
COPY package*.json ./

# 安装依赖
RUN npm ci --only=production

# 复制test-runner-secure.cjs和验证测试脚本
COPY test-runner-secure.cjs .
COPY test-runner-secure.validation-tests.cjs .
COPY test-runner-secure.validation-tests-docker.cjs .

# 设置命令
CMD ["node", "test-runner-secure.validation-tests-docker.cjs"]