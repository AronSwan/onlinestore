{
  "__inputs": [
    {
      "name": "DS_PROM",
      "label": "Prometheus",
      "description": "Select your Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "title": "OpenObserve - Email Verification Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["openobserve", "email-verification"],
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Unknown Ratio (last 5m)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
          "expr": "sum(rate(verify_unknown_count{stream=\"email_verification\"}[5m])) / sum(rate(verify_total_count{stream=\"email_verification\"}[5m]))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Timeout Rate (last 10m)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
          "expr": "sum(rate(verify_timeout_count{stream=\"email_verification\"}[10m])) / sum(rate(verify_total_count{stream=\"email_verification\"}[10m]))"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top Domain Errors (15m)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "C",
          "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
          "expr": "topk(10, sum by (domain) (increase(domain_error_count{stream=\"email_verification\"}[15m])))"
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "type": "timeseries",
      "title": "Latency p95",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "D",
          "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
          "expr": "histogram_quantile(0.95, sum by (le) (rate(verify_latency_bucket{stream=\"email_verification\"}[5m])))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "OO Health",
      "gridPos": { "x": 0, "y": 20, "w": 4, "h": 4 },
      "targets": [
        {
          "refId": "E",
          "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
          "expr": "max(openobserve_up)"
        }
      ]
    }
  ]
}