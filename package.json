{
  "name": "caddy-style-shopping-site",
  "version": "1.0.0",
  "description": "Modern e-commerce site with performance optimization and code quality tools",
  "main": "index.html",
  "scripts": {
    "analyze": "echo 'AST analysis temporarily disabled'",
    "analyze-file": "echo 'File analysis temporarily disabled'",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write js/**/*.js css/**/*.css *.html",
    "format:check": "prettier --check js/**/*.js css/**/*.css *.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "quality:check": "npm run lint && npm run format:check && npm run test",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:gate": "node scripts/quality-gate.js",
    "quality:gate:strict": "AUDIT_PROFILE=strict node scripts/quality-gate.js",
    "quality:report": "npm run quality:gate && echo 'Quality report generated: quality-gate-report.json'",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "serve": "python -m http.server 8000",
    "dev": "npm run quality:check && npm run serve",
    "ci:quality": "npm run lint && npm run test:coverage && npm run quality:gate",
    "precommit": "npm run quality:gate",
    "hooks:install": "node scripts/install-hooks.js install",
    "hooks:uninstall": "node scripts/install-hooks.js uninstall",
    "postinstall": "npm run hooks:install"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "__DEV__": true
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "keywords": [
    "e-commerce",
    "shopping-cart",
    "performance-optimization",
    "lazy-loading",
    "pwa",
    "javascript",
    "code-quality"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
