{
  "name": "caddy-style-shopping-site",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint js/**/*.js",
    "test": "cross-env NODE_OPTIONS='--no-warnings' playwright test",
    "test:unit": "cross-env NODE_OPTIONS='--no-warnings' playwright test --config=unit.config.js",
    "test:e2e": "cross-env NODE_OPTIONS='--no-warnings' playwright test --config=e2e.config.js",
    "test:perf": "cross-env NODE_OPTIONS='--no-warnings' playwright test --config=perf.config.js",
    "test:coverage": "cross-env NODE_OPTIONS='--no-warnings' playwright show-report",
    "build:secure": "node scripts/deploy-security.js build",
    "deploy:secure": "node scripts/deploy-security.js deploy",
    "security:report": "node scripts/deploy-security.js report",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update:patch": "npm update",
    "update:check": "node scripts/update-dependencies.js",
    "update:auto": "node scripts/update-dependencies.js --auto-fix",
    "security:check": "npm audit && cd backend && npm audit",
    "security:fix": "npm audit fix && cd backend && npm audit fix",
    "deps:check": "npm outdated && cd backend && npm outdated",
    "deps:update": "npm run update:patch && cd backend && npm update",
    "test:backend": "cd backend && npm run test:cov",
    "test:backend:soft": "cd backend && npm run test:cov:soft"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chai": "^6.2.0",
    "mocha": "^11.7.2",
    "puppeteer": "^24.22.3",
    "puppeteer-core": "^24.22.3",
    "sharp": "^0.33.5",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.1",
    "eslint": "^9.36.0",
    "globals": "^13.24.0",
    "playwright": "^1.55.0",
    "postcss-preset-env": "^10.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "webpack": "^5.102.0"
  }
}
